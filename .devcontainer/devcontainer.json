{
  "service": "app",
  "workspaceFolder": "/workspace",
  "dockerComposeFile": "docker-compose.yml",
  "postCreateCommand": "./.devcontainer/sh/postCreateCommand.sh",
  "features": {
    "docker-from-docker": {
      "version": "latest"
    }
  },
  "forwardPorts": [],
  "customizations": {
    "vscode": {
      "settings": {
        "#terminal.integrated.defaultProfile.linux#": "/bin/bash",
        "#terminal.integrated.defaultProfile.windows#": "/bin/bash",
        "#terminal.integrated.defaultProfile.osx#": "/bin/bash",
        "terminal.integrated.shellIntegration.enabled": false,
        "typescript.preferences.importModuleSpecifier": "project-relative",
        "files.trimTrailingWhitespace": true,
        "explorer.compactFolders": false,
        "editor.guides.bracketPairs": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.codeActionsOnSave": [
          "source.addMissingImports",
          "source.fixAll.eslint"
        ],
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "[ruby]": {
          "editor.rulers": [],
          "editor.defaultFormatter": "castwide.solargraph"
        },
        "solargraph.useBundler": true,
        "solargraph.diagnostics": true,
        "solargraph.formatting": true,
        "solargraph.bundlerPath": "/workspace/backend/api/vendor/bundle/ruby/3.3.0/bin/solargraph",
        "solargraph.commandPath": "/workspace/backend/api/vendor/bundle/ruby/3.3.0/bin/solargraph"
      },
      "extensions": [
        "eamodio.gitlens",
        "GitHub.copilot",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "misogi.ruby-rubocop",
        "KoichiSasada.vscode-rdbg",
        "Shopify.ruby-lsp",
        "humao.rest-client",
        "castwide.solargraph"
      ]
    }
  }
}
